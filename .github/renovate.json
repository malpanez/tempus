{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    ":separateMajorReleases",
    "group:allNonMajor"
  ],
  "labels": ["dependencies"],
  "assignees": ["@malpanez"],
  "reviewers": ["@malpanez"],
  "schedule": ["before 4am on monday"],
  "timezone": "Europe/Madrid",
  "vulnerabilityAlerts": {
    "labels": ["security"],
    "assignees": ["@malpanez"]
  },
  "packageRules": [
    {
      "description": "Auto-merge minor and patch updates",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    },
    {
      "description": "Auto-merge Go security patches",
      "matchDatasources": ["go"],
      "matchUpdateTypes": ["patch"],
      "matchDepTypes": ["indirect"],
      "automerge": true
    },
    {
      "description": "Require approval for major updates",
      "matchUpdateTypes": ["major"],
      "automerge": false
    },
    {
      "description": "Group GitHub Actions updates",
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions",
      "automerge": true,
      "pinDigests": true
    },
    {
      "description": "Group Go module updates",
      "matchDatasources": ["go"],
      "groupName": "Go modules",
      "separateMajorMinor": true
    }
  ],
  "golang": {
    "commitMessageTopic": "module {{depName}}",
    "postUpdateOptions": ["gomodTidy"]
  },
  "prConcurrentLimit": 3,
  "prCreation": "not-pending",
  "prHourlyLimit": 2,
  "semanticCommits": "enabled",
  "commitMessagePrefix": "chore(deps):",
  "commitMessageAction": "update",
  "rebaseWhen": "behind-base-branch",
  "platformAutomerge": true
}
